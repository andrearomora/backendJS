<table border="1">
    <thead>
        <td>Title</td>
        <td>Image</td>
        <td>Description</td>
        <td>Price</td>
        <td>Code</td>
        <td>Stock</td>
        <td>Category</td>
        <td>Add to cart</td>
    </thead>
    <tbody>
        {{#each docs}}
            <tr>
                <td>{{this.title}}</td>
                <td><img src="{{this.thumbnail}}" alt="" style="width: 100px;"></td>
                <td>{{this.description}}</td>
                <td>$ {{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>
                    <button value="{{this._id}}" class="btn btn-primary" id = "addToCart">
                        <i class="fa-solid fa-cart-plus"></i>
                    </button>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{#if hasPrevPage}}
    <button><a href="{{prevLink}}">PREVIOUS</a></button>
{{/if}}
<a href="{{page}}"></a>
{{#if hasNextPage}}
